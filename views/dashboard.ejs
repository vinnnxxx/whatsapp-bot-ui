<script>
	const restartButton = document.getElementById('restartServerButton');
	const confirmationModal = document.getElementById('confirmationModal');
	const confirmButton = document.getElementById('confirmButton');
	const cancelButton = document.getElementById('cancelButton');
	const countdownText = document.getElementById('countdownText');
	const countdownElement = document.getElementById('countdown');

	const clearHistoryBtn = document.getElementById('clearHistoryBtn');
	const clearHistoryModal = document.getElementById('clearHistoryModal');
	const cancelClearHistoryBtn = document.getElementById('cancelClearHistoryBtn');
	const confirmClearHistoryBtn = document.getElementById('confirmClearHistoryBtn');

	const toggleSidebarButton = document.getElementById('toggleSidebar');
	const sidebar = document.getElementById('sidebar');
	const closeSidebarButton = document.getElementById('closeSidebar');

	toggleSidebarButton.addEventListener('click', () => {
		sidebar.classList.toggle('-translate-x-full');
	});

	closeSidebarButton.addEventListener('click', () => {
		sidebar.classList.add('-translate-x-full');
	});
	
	const ws = new WebSocket(`ws://${window.location.host}`);

	ws.onmessage = (event) => {
		const data = JSON.parse(event.data);
		if (data.messageData) {
			const messageData = data.messageData;
			let messageDiv = document.createElement('div');
			messageDiv.classList.add('chat-bubble');

			if (messageData.group) {
				messageDiv.classList.add('flex');
				messageDiv.innerHTML = `
					<div class="bg-gray-600 rounded">
						<div class="p-2">
							<span class="font-bold">${messageData.group}</span>
							<span>(${messageData.participant})</span>
						</div>
						<p class="p-2 bg-gray-700">${messageData.message}</p>
					</div>
				`;
				document.getElementById('groupMessageContainer').appendChild(messageDiv);
			} else {
				messageDiv.classList.add('flex');
				messageDiv.innerHTML = `
					<div class="bg-gray-600 rounded">
						<div class="p-2">
							<span class="font-bold">${messageData.sender}</span>
						</div>
						<p class="bg-gray-700 p-2">${messageData.message}</p>
					</div>
				`;
				document.getElementById('privateMessageContainer').appendChild(messageDiv);
			}

			const messages = JSON.parse(localStorage.getItem('messageHistory')) || [];
			messages.push(messageData);
			localStorage.setItem('messageHistory', JSON.stringify(messages));

			const activeContainer = messageData.group ? 'groupMessageContainer' : 'privateMessageContainer';
			const container = document.getElementById(activeContainer);
			container.scrollTop = container.scrollHeight;
		}
	};

	ws.onclose = () => {
		console.log('WebSocket connection closed');
	};

	document.getElementById('deleteAuthInfoBtn').addEventListener('click', () => {
		fetch('/delete-auth-info', { method: 'DELETE' })
			.then(response => response.json())
			.then(data => {
				if (data.success) {
					alert(data.message);
				} else {
					alert('Failed to delete auth info: ' + data.message);
				}
				window.location.href = '/';
			})
			.catch(error => {
				console.error('Error deleting auth info:', error);
				alert('Error deleting auth info');
			});
		});

	restartButton.onclick = () => {
		confirmationModal.classList.remove('hidden');
	};

	confirmButton.onclick = () => {
		confirmButton.classList.add('hidden');
		cancelButton.classList.add('hidden');
		countdownText.classList.remove('hidden');

		let countdown = 3;
		countdownElement.textContent = countdown;

		const countdownInterval = setInterval(() => {
			countdown--;
			countdownElement.textContent = countdown;

			if (countdown <= 0) {
				clearInterval(countdownInterval);
				location.reload();
			}
		}, 1000);

		fetch('/restart-server', {
			method: 'POST',
			headers: {
				'Content-Type': 'application/json',
			}
		})
		.then(response => response.json())
		.then(data => {
			if (data.success) {
				console.log(data.message);
			} else {
				alert('Failed to restart server: ' + data.message);
			}
		})
		.catch(error => {
			console.error("Error restarting server:", error);
			alert('Error restarting server');
		});
	};

	cancelButton.onclick = () => {
		confirmationModal.classList.add('hidden');
	};

	clearHistoryBtn.addEventListener('click', () => {
		clearHistoryModal.classList.remove('hidden');
	});
	
	cancelClearHistoryBtn.addEventListener('click', () => {
		clearHistoryModal.classList.add('hidden');
	});

	confirmClearHistoryBtn.addEventListener('click', () => {
		document.getElementById('groupMessageContainer').innerHTML = '';
		document.getElementById('privateMessageContainer').innerHTML = '';
		localStorage.removeItem('messageHistory');
		clearHistoryModal.classList.add('hidden');
		const successMessage = document.createElement('div');
		successMessage.classList.add('fixed', 'top-4', 'right-4', 'bg-green-500', 'text-white', 'p-2', 'rounded');
		successMessage.textContent = 'Riwayat pesan berhasil dihapus dari localStorage';
		document.body.appendChild(successMessage);
		setTimeout(() => {
			successMessage.remove();
		}, 3000);
	});
</script>

