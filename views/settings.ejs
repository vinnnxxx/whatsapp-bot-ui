            modal.classList.add('hidden');
        });
		
		const modalBadwords = document.getElementById('editModalBadwords');
        const buttonBadwords = document.getElementById('editButtonBadwords');
        const closeModalBadwords = document.getElementById('closeModalBadwords');
        buttonBadwords.addEventListener('click', () => {
            modalBadwords.classList.remove('hidden');
        });
